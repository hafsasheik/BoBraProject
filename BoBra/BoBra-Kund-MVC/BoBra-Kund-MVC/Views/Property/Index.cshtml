@model IEnumerable<BoBra_Kund_MVC.Models.PropertyViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PropertyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LivingArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlotArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BiArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LivingArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlotArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewingDate)
            </td>
        </tr>
}
    </tbody>
</table>
